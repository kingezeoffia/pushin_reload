# ===================================
# STRIPE CONFIGURATION
# ===================================

# TEST MODE (for development - works without company account)
STRIPE_TEST_SECRET_KEY=sk_test_YOUR_TEST_KEY_HERE

# Price IDs for TEST mode (get these from Stripe Dashboard -> Products -> each price)
# Pro Plan (formerly Standard)
STRIPE_TEST_PRICE_PRO_MONTHLY=price_test_pro_monthly_placeholder
STRIPE_TEST_PRICE_PRO_YEARLY=price_test_pro_yearly_placeholder
# Advanced Plan
STRIPE_TEST_PRICE_ADVANCED_MONTHLY=price_test_advanced_monthly_placeholder
STRIPE_TEST_PRICE_ADVANCED_YEARLY=price_test_advanced_yearly_placeholder

STRIPE_TEST_WEBHOOK_SECRET=whsec_test_YOUR_WEBHOOK_SECRET

# LIVE MODE (for production - requires company account)
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_KEY_HERE

# Price IDs for LIVE mode (get these from Stripe Dashboard -> Products -> each price)
# Pro Plan (formerly Standard)
STRIPE_PRICE_PRO_MONTHLY=price_YOUR_LIVE_PRO_MONTHLY_PRICE_ID
STRIPE_PRICE_PRO_YEARLY=price_YOUR_LIVE_PRO_YEARLY_PRICE_ID
# Advanced Plan
STRIPE_PRICE_ADVANCED_MONTHLY=price_YOUR_LIVE_ADVANCED_MONTHLY_PRICE_ID
STRIPE_PRICE_ADVANCED_YEARLY=price_YOUR_LIVE_ADVANCED_YEARLY_PRICE_ID

STRIPE_WEBHOOK_SECRET=whsec_live_YOUR_LIVE_WEBHOOK_SECRET

# Environment (set to 'test' for development, 'production' for live)
NODE_ENV=test

# Port (Railway/Vercel will set this automatically)
PORT=3000

# Database URL (Railway will set this automatically from PostgreSQL service)
DATABASE_URL=postgresql://user:password@host:port/database

