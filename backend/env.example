STRIPE_TEST_WEBHOOK_SECRET=whsec_test_YOUR_WEBHOOK_SECRET

# LIVE MODE (for production - requires company account)
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_KEY_HERE

# Price IDs for LIVE mode (get these from Stripe Dashboard -> Products -> each price)
# Pro Plan (formerly Standard)
STRIPE_PRICE_PRO_MONTHLY=price_YOUR_LIVE_PRO_MONTHLY_PRICE_ID
STRIPE_PRICE_PRO_YEARLY=price_YOUR_LIVE_PRO_YEARLY_PRICE_ID
# Advanced Plan
STRIPE_PRICE_ADVANCED_MONTHLY=price_YOUR_LIVE_ADVANCED_MONTHLY_PRICE_ID
STRIPE_PRICE_ADVANCED_YEARLY=price_YOUR_LIVE_ADVANCED_YEARLY_PRICE_ID

STRIPE_WEBHOOK_SECRET=whsec_live_YOUR_LIVE_WEBHOOK_SECRET

# Environment (set to 'test' for development, 'production' for live)
NODE_ENV=test

# Port (Railway/Vercel will set this automatically)
PORT=3000

# Database URL (Railway will set this automatically from PostgreSQL service)
DATABASE_URL=postgresql://user:password@host:port/database

# ===================================
# JWT CONFIGURATION
# ===================================
# CRITICAL: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-long-random-string
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-use-long-random-string

# ===================================
# EMAIL CONFIGURATION (for password reset)
# ===================================

# Frontend URL (for password reset links in emails)
# For mobile apps, use deep link: pushinapp://reset-password
# For web apps, use your website URL: https://yourapp.com/reset-password
FRONTEND_URL=pushinapp://reset-password

# Email sender address
EMAIL_FROM="PUSHIN" <noreply@pushinapp.com>

# ===================================
# SMTP CONFIGURATION
# ===================================

# Option 1: Gmail (for testing/small scale)
# 1. Enable 2FA on your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character app password below
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-char-app-password

# Option 2: Mailtrap (for development/testing - catches all emails)
# Sign up at https://mailtrap.io (free tier available)
# Get credentials from Mailtrap Dashboard -> Email Testing -> SMTP Settings
# SMTP_HOST=sandbox.smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_SECURE=false
# SMTP_USER=your-mailtrap-username
# SMTP_PASS=your-mailtrap-password

# Option 3: SendGrid (for production)
# Sign up at https://sendgrid.com
# Create an API key: Settings -> API Keys
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# Option 4: AWS SES (for production)
# Configure in AWS Console -> SES
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-ses-smtp-username
# SMTP_PASS=your-ses-smtp-password

# Option 5: Mailgun (for production)
# Sign up at https://www.mailgun.com
# Get SMTP credentials from Domains -> Select your domain -> SMTP credentials
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=postmaster@your-mailgun-domain.com
# SMTP_PASS=your-mailgun-smtp-password

