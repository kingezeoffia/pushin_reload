import 'package:flutter/material.dart';
import 'package:provider/provider.dart';
import '../../state/pushin_app_controller.dart';
import '../theme/workouts_design_tokens.dart';
import '../../domain/models/workout_mode.dart';
import '../widgets/workouts/current_status_card.dart';
import '../widgets/workouts/workout_mode_selector.dart';
import '../widgets/workouts/quick_start_card.dart';
import '../widgets/shared/plan_badge.dart';
import '../widgets/dashboard/goal_progress_card.dart' show CustomWorkoutCard;

class EnhancedWorkoutsScreen extends StatefulWidget {
  const EnhancedWorkoutsScreen({super.key});

  @override
  State<EnhancedWorkoutsScreen> createState() => _EnhancedWorkoutsScreenState();
}

class _EnhancedWorkoutsScreenState extends State<EnhancedWorkoutsScreen>
    with TickerProviderStateMixin {
  WorkoutMode _selectedMode = WorkoutMode.normal;
  late AnimationController _pageLoadController;
  late Animation<double> _fadeAnimation;
  late Animation<Offset> _slideAnimation;

  @override
  void initState() {
    super.initState();
    _pageLoadController = AnimationController(
      duration: const Duration(milliseconds: 600),
      vsync: this,
    );

    _fadeAnimation = Tween<double>(begin: 0.0, end: 1.0).animate(
      CurvedAnimation(parent: _pageLoadController, curve: Curves.easeIn),
    );

    _slideAnimation = Tween<Offset>(
      begin: const Offset(0, 0.1),
      end: Offset.zero,
    ).animate(CurvedAnimation(
      parent: _pageLoadController,
      curve: Curves.easeOutCubic,
    ));

    _pageLoadController.forward();
  }

  @override
  void dispose() {
    _pageLoadController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    final safePadding = MediaQuery.of(context).padding.bottom;
    final pillNavigationHeight = 64.0; // Pill height
    final pillMargin = 8.0; // Margin from bottom
    final totalBottomSpace =
        safePadding + pillMargin + pillNavigationHeight; // No extra buffer

    return Scaffold(
      backgroundColor: WorkoutsDesignTokens.darkBackground,
      body: Stack(
        children: [
          // Main content
          SafeArea(
            child: FadeTransition(
              opacity: _fadeAnimation,
              child: SlideTransition(
                position: _slideAnimation,
                child: CustomScrollView(
                  physics: const BouncingScrollPhysics(),
                  slivers: [
                // Header
                SliverToBoxAdapter(
                  child: Padding(
                    padding: const EdgeInsets.all(20),
                    child: Column(
                      crossAxisAlignment: CrossAxisAlignment.start,
                      children: [
                        const Text(
                          'Workouts',
                          style: TextStyle(
                            color: Colors.white,
                            fontSize: 40,
                            fontWeight: FontWeight.bold,
                            letterSpacing: -1,
                          ),
                        ),
                        const SizedBox(height: 8),
                        Text(
                          'Complete workouts to unlock screen time',
                          style: TextStyle(
                            color: Colors.white.withOpacity(0.6),
                            fontSize: 16,
                          ),
                        ),
                      ],
                    ),
                  ),
                ),

                // Current Status Card
                const SliverToBoxAdapter(
                  child: Padding(
                    padding: EdgeInsets.symmetric(horizontal: 20),
                    child: CurrentStatusCard(),
                  ),
                ),

                const SliverToBoxAdapter(child: SizedBox(height: 24)),

                // Workout Mode Selection
                SliverToBoxAdapter(
                  child: Padding(
                    padding: const EdgeInsets.symmetric(horizontal: 20),
                    child: Column(
                      crossAxisAlignment: CrossAxisAlignment.start,
                      children: [
                        const Text(
                          'Choose Mode',
                          style: TextStyle(
                            color: Colors.white,
                            fontSize: 28,
                            fontWeight: FontWeight.bold,
                          ),
                        ),
                        const SizedBox(height: 24),
                        WorkoutModeSelector(
                          selectedMode: _selectedMode,
                          onModeChanged: (mode) {
                            setState(() => _selectedMode = mode);
                          },
                        ),
                      ],
                    ),
                  ),
                ),

                const SliverToBoxAdapter(child: SizedBox(height: 24)),

                // Quick Start Section
                SliverToBoxAdapter(
                  child: Padding(
                    padding: const EdgeInsets.symmetric(horizontal: 20),
                    child: QuickStartCard(
                      selectedMode: _selectedMode,
                      onStartWorkout: _startWorkout,
                    ),
                  ),
                ),

                const SliverToBoxAdapter(child: SizedBox(height: 24)),

                // My Goals Section
                SliverToBoxAdapter(
                  child: Padding(
                    padding: const EdgeInsets.symmetric(horizontal: 20),
                    child: Column(
                      crossAxisAlignment: CrossAxisAlignment.start,
                      children: [
                        const Text(
                          'Custom Mode',
                          style: TextStyle(
                            color: Colors.white,
                            fontSize: 28,
                            fontWeight: FontWeight.bold,
                          ),
                        ),
                      ],
                    ),
                  ),
                ),

                const SliverToBoxAdapter(child: SizedBox(height: 16)),

                // Custom Workout Card
                const SliverToBoxAdapter(
                  child: CustomWorkoutCard(),
                ),

                const SliverToBoxAdapter(child: SizedBox(height: 24)),

                // New features coming soon - small and sleek
                SliverToBoxAdapter(
                  child: Center(
                    child: Padding(
                      padding: const EdgeInsets.symmetric(vertical: 8),
                      child: Text(
                        'New features coming soon',
                        style: TextStyle(
                          color: Colors.white.withOpacity(0.6),
                          fontSize: 12,
                          fontWeight: FontWeight.w400,
                          letterSpacing: 0.5,
                        ),
                      ),
                    ),
                  ),
                ),

                const SliverToBoxAdapter(child: SizedBox(height: 16)),

                SliverToBoxAdapter(
                    child: SizedBox(height: 40 + totalBottomSpace)),
              ],
            ),
          ),
        ),

        // Plan badge (top right)
        Positioned(
          top: 50,
          right: 20,
          child: PlanBadge(planTier: 'free'),
        ),
      ],
    );
  }

  void _startWorkout() {
    // TODO: Implement workout start logic
    print('Starting ${_selectedMode.displayName} workout');
  }
}
